@model Products.Models.USUARIO

<div id="CreateModal">
    <h3>Create user</h3>

    @using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(u => u.NOMBRE_USUARIO, "User", new { id="inputUsuario", @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(u => u.NOMBRE_USUARIO)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(u => u.PWD_USUARIO, "Password", new { id = "inputPwd", @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(u => u.PWD_USUARIO)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(u => u.EDAD_USUARIO, "Age", new { id = "inputAge", @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(u => u.EDAD_USUARIO)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(u => u.GENERO_USUARIO, "Gender", new { id = "inputGender", @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(u => u.GENERO_USUARIO)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(u => u.NACIONALIDAD_USUARIO, "Nationality", new { id = "inputNationality", @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(u => u.NACIONALIDAD_USUARIO)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(u => u.ROL_ID_ROL, "Rol", new { id = "inputRol", @class = "col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(u => u.ROL_ID_ROL)
            </div>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" onclick="CreateUser()">Create</button>
    </div>
    }
</div>