@model Products.Models.USUARIO

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Ingresar", "Login", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    if (ViewBag.Mensaje != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Mensaje
        </div>
    }
    <div class="container">
        <div class="panel">
            <div class="panel-heading">
                <h3>Login</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(u => u.ID_USUARIO, "User")
                    @Html.TextBoxFor(u => u.ID_USUARIO, new {id= "inputUsuario", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.PWD_USUARIO, "Password")
                    @Html.PasswordFor(u => u.PWD_USUARIO, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary rounded-0">Login</button>
            </div>
        </div>
    </div>

}

